<p id="notice"><%= notice %></p>

<h1>Listing Api Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Location</th>
      <th>Size</th>
      <th>Property type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_spaces.each do |api_space| %>
      <tr>
        <td><%= api_space.name %></td>
        <td><%= api_space.price %></td>
        <td><%= api_space.location %></td>
        <td><%= api_space.size %></td>
        <td><%= api_space.property_type %></td>
        <td><%= link_to 'Show', api_space %></td>
        <td><%= link_to 'Edit', edit_api_space_path(api_space) %></td>
        <td><%= link_to 'Destroy', api_space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_api_space_path %>
